@model DoAnASP1.Areas.Admin.Models.SanPhamViewModels

@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a> 
</p>
<form asp-controller="SanPhamModels" asp-action="Index" method="get">
    <p>

        Tên Sản Phẩm: <input type="text" asp-for="SearchString"><button type="submit" class="btn-facebook">Tìm</button>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].NgaySX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SanPhams[0].LoaiSP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SanPhams)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySX)
                </td>
                <td>
                    <img src="~/img/product/@Html.DisplayFor(modelItem => item.Hinh)" class="img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSP">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSP">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaSP">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}